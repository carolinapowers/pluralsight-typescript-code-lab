{
  "name": "typescript-design-system-barrel-lab",
  "version": "1.0.0",
  "description": "Learn TypeScript barrel files by building a design system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "predev": "npm run generate:css",
    "dev": "vite",
    "prebuild": "npm run typecheck:full",
    "build": "tsc && vite build",
    "build:watch": "vite build --watch",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "pretest": "npm run typecheck:full",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:exports": "vitest run --reporter=verbose src/__tests__/barrel-exports.test.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:with-tokens": "npm run generate:css && tsc --noEmit",
    "typecheck:full": "npm run typecheck:with-tokens",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "generate:css": "npx tsx scripts/generate-css-vars.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@phenomnomnominal/tsquery": "^6.1.3",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "~5.5.4",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  },
  "keywords": [
    "typescript",
    "barrel-files",
    "design-system",
    "react",
    "components",
    "code-lab"
  ],
  "author": "Your Name",
  "license": "MIT"
}
